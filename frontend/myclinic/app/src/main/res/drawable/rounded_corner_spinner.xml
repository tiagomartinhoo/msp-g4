<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="7dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/disabled" />
                    <padding
                        android:bottom="10dp"
                        android:left="20dp"
                        android:right="5dp"
                        android:top="10dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_arrow_down"
                android:gravity="end"/>
        </layer-list>
    </item>

</selector>