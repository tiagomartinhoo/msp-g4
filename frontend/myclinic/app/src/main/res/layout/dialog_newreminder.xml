<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_back"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="New Medication Reminder"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Please state the medications details."
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/dark_grey"
        android:textSize="13dp"
        android:gravity="center"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@color/disabled"/>

    <TextView
        android:id="@+id/textTitleEmailGen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Medication Name *"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/dark_grey"
        android:textSize="13dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editEmailGen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_general"
        android:fontFamily="@font/inter_medium"
        android:hint="Name..."
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/darkest_grey"
        android:textColorHint="@color/grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Time *"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/dark_grey"
        android:textSize="13dp" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:timePickerMode="spinner"
        android:background="@drawable/edittext_general"/>

    <TextView
        android:id="@+id/textDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Days of the Week *"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/dark_grey"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/checkSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/checkSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:id="@+id/divider1Gen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@color/disabled"/>

    <LinearLayout
        android:id="@+id/linearLayoutButtonAddReq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/button_sec"
            android:textColor="@color/darkest_grey"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_general"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Create"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>
