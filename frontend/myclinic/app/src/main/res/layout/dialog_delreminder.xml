<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_back"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="Delete Reminder?"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Are you sure you want to delete this medication reminder?"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/dark_grey"
        android:textSize="13dp"
        android:gravity="center"/>

    <View
        android:id="@+id/divider1Gen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@color/disabled"/>

    <LinearLayout
        android:id="@+id/linearLayoutButtonAddReq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/button_sec"
            android:textColor="@color/darkest_grey"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="No"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_general"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Yes"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>