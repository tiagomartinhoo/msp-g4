<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_dialog_back"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="Leave a Review"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/purple"
        android:textSize="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="On a scale of 1 to 5 stars, how satisfied were you with this parking spot?"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/dark_grey"
        android:textSize="13dp"
        android:gravity="center"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@color/disabled"/>

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1"
        android:progressTint="@color/purple"
        android:progressBackgroundTint="@color/borders"
        android:secondaryProgressTint="@color/purple"
        android:rating="4"
        android:layout_margin="20dp"/>


    <View
        android:id="@+id/divider1Gen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@color/disabled"/>

    <LinearLayout
        android:id="@+id/linearLayoutButtonAddReq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/rounded_corner_sec_button"
            android:textColor="@color/darkest_grey"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="No"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>